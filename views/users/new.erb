<h1>Create new user</h1>

<form action="/users" method="post"role="form">
 <div class="form-group">
   <label for="user_email">Email:</label>
   <br>
   <input id="user_email" class="form-control" name="user[email]" type="text" value="<%= @user.email %>" />
 </div>
  <div class="form-group">
   <label for="user_encrypted_password">Password:</label>
   <br>
   <input id="user_encrypted_password" class="form-control" name="user[encrypted_password]" type="password" />
 </div>
 <button type="submit" class="btn btn-success">Submit</button>
</form> 